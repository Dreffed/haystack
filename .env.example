# Haystack Docker Environment Configuration
# Copy this file to .env and modify as needed

# Database Configuration
DB_ROOT_PASSWORD=haystack_root_2023_secure
DB_NAME=Peregrin
DB_USER=peregrin
DB_PASSWORD=peregrin_pass_2023_secure

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_SECRET_KEY=your-secret-key-change-in-production

# Web UI Configuration
UI_TITLE=Haystack Web Collector Suite
UI_THEME=dark

# Scraping Configuration
DEFAULT_DELAY_MIN=1
DEFAULT_DELAY_MAX=10
MAX_CONCURRENT_SCRAPERS=5

